@using global::OnlineExamSystem.Models
 @model  Question

@{
    ViewData["Title"] = "إضافة سؤال جديد";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="Text">نص السؤال</label>
        <input type="text" class="form-control" id="Text" name="Text" value="@Model.Text" required />
    </div>

    <div class="form-group">
        <label for="Option1">الخيار 1</label>
        <input type="text" class="form-control" id="Option1" name="Option1" value="@Model.Option1" required />
    </div>

    <div class="form-group">
        <label for="Option2">الخيار 2</label>
        <input type="text" class="form-control" id="Option2" name="Option2" value="@Model.Option2" required />
    </div>

    <div class="form-group">
        <label for="Option3">الخيار 3</label>
        <input type="text" class="form-control" id="Option3" name="Option3" value="@Model.Option3" required />
    </div>

    <div class="form-group">
        <label for="Option4">الخيار 4</label>
        <input type="text" class="form-control" id="Option4" name="Option4" value="@Model.Option4" required />
    </div>

    <div class="form-group">
        <label for="CorrectAnswer">الإجابة الصحيحة (من 1 إلى 4)</label>
        <input type="number" class="form-control" id="CorrectAnswer" name="CorrectAnswer" value="@Model.CorrectAnswer" min="1" max="4" required />
    </div>

    <input type="hidden" name="ExamId" value="@Model.ExamId" />

    <button type="submit" class="btn btn-primary">حفظ</button>
</form>
