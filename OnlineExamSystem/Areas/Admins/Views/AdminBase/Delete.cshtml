@using global::OnlineExamSystem.Models
@model Question
@{
    ViewData["Title"] = "حذف السؤال";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>تحذير!</strong> هل أنت متأكد أنك تريد حذف هذا السؤال؟
</div>

<div>
    <h4>السؤال: @Model.Text</h4>
    <ul>
        <li>الخيار 1: @Model.Option1</li>
        <li>الخيار 2: @Model.Option2</li>
        <li>الخيار 3: @Model.Option3</li>
        <li>الخيار 4: @Model.Option4</li>
    </ul>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">نعم، حذف السؤال</button>
    <a href="@Url.Action("ManageQuestions", "Admin", new { examId = Model.ExamId })" class="btn btn-secondary">إلغاء</a>
</form>
