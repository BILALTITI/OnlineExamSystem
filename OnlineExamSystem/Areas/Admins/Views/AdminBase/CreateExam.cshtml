@model StudentExam

@{
    ViewData["Title"] = "إضافة امتحان جديد";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="Title">عنوان الامتحان</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Exam.Title" required />
    </div>

    <button type="submit" class="btn btn-primary">حفظ</button>
</form>
