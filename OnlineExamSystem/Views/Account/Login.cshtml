@using global::OnlineExamSystem.Models.ViewModel
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Exam System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <style>
        :root {
            --primary-color: #6366f1;
            --primary-hover: #4f46e5;
            --background-gradient: linear-gradient(135deg, #f8f9fa 0%, #2573c1 100%);
        }

        body {
            background: var(--background-gradient);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .auth-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            background: white;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .auth-card:hover {
                transform: translateY(-5px);
            }

        .auth-header {
            background: var(--primary-color);
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
        }

        .btn-primary {
            background: var(--primary-color);
            border: none;
            padding: 12px;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background: var(--primary-hover);
                transform: translateY(-2px);
            }

        .input-group-text {
            background-color: #f1f3f5;
            border: none;
        }

        .form-label {
            margin-top: 15px;
            margin-bottom: 5px;
        }

        .social-login .btn {
            border: 1px solid #dee2e6;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            background-color: white;
            transition: background-color 0.3s;
        }

            .social-login .btn:hover {
                background-color: #f8f9fa;
            }

        .alert-danger {
            font-size: 0.9rem;
            margin-top: 20px;
        }

    </style>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="auth-card">
                    <div class="auth-header">
                        <h2 class="mb-1">Welcome Back!</h2>
                        <p class="mb-0">Please sign in to continue</p>
                    </div>

                    <div class="card-body p-4 p-md-5">
                        <form asp-controller="Account" asp-action="Login" method="post">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label asp-for="Username" class="form-label fw-bold text-muted"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="Username" class="form-control" placeholder="Enter your username" name="Username" />
                                </div>
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-bold text-muted"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" id="password" name="Password" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mb-3">
                                Sign In <i class="fas fa-arrow-right ms-2"></i>
                            </button>

                            

                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordField = document.getElementById('password');
            const icon = document.getElementById('toggleIcon');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
